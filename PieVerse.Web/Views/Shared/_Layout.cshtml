<!DOCTYPE html>
<html lang="en" class="@User.IsInRole("Admin")? ''admin' : ''">
<head>
    <link href='https://fonts.googleapis.com/css?family=Amatic+SC' rel='stylesheet' type='text/css' />
    <link href='https://fonts.googleapis.com/css?family=Play:400,700&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <meta charset="utf-8" />
    <title>Пирожковая</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/jquery")
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    @Scripts.Render("~/Scripts/Redirect.js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</head>
<body>

    <header>
        <h1 class="logo">PieVerse</h1><br/>
        <ul class="menu">
            <li class="@ViewBag.ReadStyle">@Html.ActionLink("Читать", "feed", "Pieverse")</li>
            <li class="@ViewBag.WriteStyle">@Html.ActionLink("Писать", "add", "Pieverse")</li>
        </ul>
    </header>

    <main>
        @RenderBody()
    </main>
    <footer>
        (c) 2015 PieVerse
    </footer>
    
    <script>
    
    $(".line-menu a").click( function (event) { 
        event.preventDefault();
        $("#firstLine").html($(this).html());
        $("#FirstLine_Id").val($(this).attr("id"));
        $("#FirstLine_Body").val($(this).html());
        $("html, body").animate({ scrollTop: 0 }, "fast");
    });

    $(".like").click(function() {$(this).toggleClass("active");});
    
    </script>
    
</body>
</html>
